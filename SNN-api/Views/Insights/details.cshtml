@model snn.cc_SnnInsight
<h1>
    @ViewData["title"]
</h1>

@Html.Raw(TempData["msgBox"])

<form asp-action="saveInsight" method="post">
    <div class="form-group row">
        <div class="col-sm-6">
            <label>URL</label>
            <input type="text" asp-for="src" class="form-control" />
        </div>
        <div class="col-sm-2">
            <label>Type</label>
            <select asp-items="ViewBag.types" class="form-control" asp-for="ref_InsightType">
                <option value="null">Select Type</option>
            </select>
        </div>
        <div class="col-sm-2">
            <label>Date</label>
            <input type="date" asp-for="occur" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label>Author</label>
        <input type="text" asp-for="author" class="form-control" />
    </div>
    <div class="form-group row">
        <label>Summary</label>
        <input type="text" asp-for="summary" class="form-control" />
    </div>
    <div class="form-group row">
        <label>Keywords</label>
        <input type="text" asp-for="keywords" class="form-control" />
    </div>
    <img src="@Model.thumb" />
    <div class="form-group row">
        <label>Head Line</label>
        <input type="text" asp-for="headline" class="form-control" />
    </div>
    <textarea asp-for="body" id="body"></textarea>
    <input type="hidden" asp-for="id" />
    <input type="hidden" asp-for="create_time" />
    <div class="border-top border-bottom py-2 mt-3">
        <div class="row">
            <div class="col">
                <a class="btn-outline-secondary btn" href='@Url.Action("index")'>Back</a>
            </div>
            <div class="col text-right">
                <button class="btn-primary btn" type="submit">Save</button>
            </div>
        </div>
    </div>
</form>
<script src="https://cdn.ckeditor.com/ckeditor5/29.2.0/classic/ckeditor.js"></script>

<script>
    $(function () {
        createEditor("#body");
    })
</script>