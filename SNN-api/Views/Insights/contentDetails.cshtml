@model snn.snn_InsightContent
<h1>
    @ViewData["title"]
</h1>

@Html.Raw(TempData["msgBox"])

<form asp-action="saveInsight" method="post">
    <div class="form-group row">
        <div class="col-sm-6">
            <label>Title</label>
            <input type="text" asp-for="title" class="form-control" />
        </div>
        <div class="col-sm-2">
            <label>Date</label>
            <input type="date" asp-for="date" class="form-control" />
        </div>
        <div class="col-sm-2">
            <label>Type</label>
            <select asp-items="ViewBag.types" class="form-control" asp-for="type">
                <option value="null">Select Type</option>
            </select>
        </div>
        <div class="col-sm-2">
            <label>Status</label>
            <select asp-items="ViewBag.statuses" class="form-control" asp-for="ref_Status">
                <option value="null">Select Status</option>
            </select>
        </div>
    </div>
    <textarea asp-for="body" id="body"></textarea>
    <input type="hidden" asp-for="id" />
    <div class="border-top border-bottom py-2 mt-3">
        <div class="row">
            <div class="col">
                <a class="btn-outline-secondary btn" href='@Url.Action("index")'>Back</a>
            </div>
            <div class="col text-right">
                <button class="btn-primary btn" type="submit">Save</button>
            </div>
        </div>
    </div>
</form>
<script src="https://cdn.ckeditor.com/ckeditor5/29.2.0/classic/ckeditor.js"></script>

<script>
    $(function () {
        createEditor("#body");
    })
</script>