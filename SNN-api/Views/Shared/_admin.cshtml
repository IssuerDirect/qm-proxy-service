<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <link href="/css/style.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    @*<environment include="Development">
            <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
        </environment>*@
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js"></script>
    <script src="~/js/form-validation.js"></script>
    <script src="~/js/admin.js"></script>
    @RenderSection("headercode", required: false)

</head>
<body>
    <div id="databContainer" class="pb-3">
        <div id="adminHeaderContainer">
            <div class="container-fluid py-2">
                <div class="row">
                    <div class="col-md text-center text-md-left">
                        <b>SNN Network Admin</b>
                    </div>
                    <div class="col-md text-center text-md-right">
                        <ul class="list-inline-md pipeline-md mb-0">
                            <li class="list-inline-item">
                                <a href="javascript:logoutfun()"><i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <nav id="menubootstrap" class="navbar navbar-expand-md py-0">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon pt-1 text-white">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link px-3" href="/admin/insights">Insights</a></li>
                        <li class="nav-item"><a class="nav-link px-3" href="/admin/events">Events</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="pb-5">
        <div class="container-fluid">
            @RenderSection("fullWidth", required: false)
        </div>
        <div class="container">
            @RenderBody()
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    @RenderSection("halfWidth", required: false)
                    @RenderSection("col6", required: false)
                </div>
                <div class="col-md-8 offset-md-2">
                    @RenderSection("col8", required: false)
                </div>
                <div class="col-md-10 offset-md-1">
                    @RenderSection("col10", required: false)
                </div>
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="/js/common.js?v=2"></script> 
    <script src="https://use.fontawesome.com/f2a35acc6e.js"></script>
    @RenderSection("Scripts", false)
    <script>
        //url: string, parameters: any, method?: string, body?: string
        function adminPostForm(url, body, parameters) {
            if (parameters == undefined) {
                parameters = {};
            }
            //parameters.headers = { "X-CSRF-TOKEN-HEADERNAME": $("input[name='AntiforgeryFieldname']").val(), credentials:"same-origin" };
            if (parameters.method == undefined) { parameters.method = "POST"; }
            let postOptions = { apiurl: '@Url.Content("~/")' + url, parameters: parameters, method: parameters.method, buttonContainer: parameters.buttonContainer };
            if (body != undefined && body != null) {
                postOptions.body = JSON.stringify(body);
            }
            net3000.common.handlePromise(postOptions);
        }

        function adminConfirmDelete(deleteOptions) {
            Swal.fire({
                title: deleteOptions.title,
                text: deleteOptions.text,
                html: deleteOptions.html,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Delete'
            }).then((result) => {
                if (result.value) {
                    if ($("#msgBox").length > 0) { $("#msgBox").html(""); }
                    if (deleteOptions.callBackFunction == undefined) { deleteOptions.callBackFunction = adminDeletedMessage; }
                    if (deleteOptions.deleteNode != undefined) { $(deleteOptions.deleteNode).remove(); }
                    //adminPostForm(deleteOptions.action,null,{ callBackFunction: deleteOptions.callBackFunction, method:"DELETE",buttonContainer:deleteOptions.buttonContainer });
                    net3000.common.handlePromise({ apiurl: deleteOptions.action, parameters: { callBackFunction: deleteOptions.callBackFunction }, method: "DELETE" });
                }
            });
        }

    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>