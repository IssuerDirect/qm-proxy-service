

<h1>Support</h1>
<form method="post"  id="contactForm" >
    <!-- Contact Form -->
    <div class="needs-validation">
        <div class="g-mb-20">
            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">
                Your name: <span class="g-color-red">*</span>
            </label>
            <input class="form-control g-color-gray-dark-v5 g-bg-white g-bg-white--focus g-brd-primary--focus g-brd-gray-light-v4 rounded-3 g-py-13 g-px-15" name="name" type="text" required />
        </div>
        <div class="g-mb-20">
            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">
                Phone: <span class="g-color-red">*</span>
            </label>
            <input class="form-control g-color-gray-dark-v5 g-bg-white g-bg-white--focus g-brd-primary--focus g-brd-gray-light-v4 rounded-3 g-py-13 g-px-15" name="phone" type="tel" required />
        </div>
        <div class="g-mb-20">
            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">
                Email: <span class="g-color-red">*</span>
            </label>
            <input class="form-control g-color-gray-dark-v5 g-bg-white g-bg-white--focus g-brd-primary--focus g-brd-gray-light-v4 rounded-3 g-py-13 g-px-15" name="email" type="email" required />
        </div>

        <div class="g-mb-40">
            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">
                Message: <span class="g-color-red">*</span>
            </label>
            <textarea class="form-control g-color-gray-dark-v5 g-bg-white g-bg-white--focus g-brd-primary--focus g-brd-gray-light-v4 g-resize-none rounded-3 g-py-13 g-px-15" name="message" rows="7" required></textarea>
        </div>

        <div class="form-group text-center">
            <div id="sendMSG" class="btn btn-primary buttonSet" onclick="contactForm();">Send Message</div>
            <div class="d-none btn btn-primary buttonSet">
                <span class="spinner-border spinner-border-sm mr-2" role="status" aria-hidden="true"></span>Please wait
            </div>
        </div>
    </div>
    <!-- End Contact Form -->
    </form>

<script>
    function contactForm() {
        $("#contactForm .buttonSet").toggleClass("d-none");
        let myFormData = net3000.common.collectData('#supportPanel');
        myFormData.account = net3000.common.currentAccount.id;
        net3000.content.processForm({ formCode: 'support', account: 1, formData: myFormData, callBackFunction: contactMsg });
    }
    function contactMsg(myResponse) {
        $("#contactForm .buttonSet").toggleClass("d-none");
        $("#contactMsgContainer").html(Mustache.render($("#contactMsgTemplate").html(), myResponse));
        $('#supportPanel > div').toggleClass('d-none');
    }

</script>